<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <!-- Define JSP Configuration -->
    <servlet>
        <servlet-name>courseController</servlet-name>
        <servlet-class>controller.Course.courseController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>courseDetailController</servlet-name>
        <servlet-class>controller.Course.courseDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>courseWatchControl</servlet-name>
        <servlet-class>controller.Course.courseWatchControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>courseQuizController</servlet-name>
        <servlet-class>controller.Course.courseQuizController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homeControl</servlet-name>
        <servlet-class>controller.Home.homeControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>courseController</servlet-name>
        <url-pattern>/course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>courseDetailController</servlet-name>
        <url-pattern>/coursedetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>courseWatchControl</servlet-name>
        <url-pattern>/coursewatch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>courseQuizController</servlet-name>
        <url-pattern>/coursequiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeControl</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Blog</servlet-name>
        <servlet-class>controller.blog.Blog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StorageIMG</servlet-name>
        <servlet-class>controller.blog.StorageIMG</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WrittenBlog</servlet-name>
        <servlet-class>controller.blog.WrittenBlog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BlogList</servlet-name>
        <servlet-class>controller.blog.BlogList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Blog</servlet-name>
        <url-pattern>/blog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StorageIMG</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WrittenBlog</servlet-name>
        <url-pattern>/writtenblog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BlogList</servlet-name>
        <url-pattern>/bloglist</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>   
</web-app>
